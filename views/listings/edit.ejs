<% layout("boilerplate") -%>
<style>
    .form-container {
        background-color: rgba(0, 0, 0, 0.75);
        padding: 20px;
        border-radius: 8px;
        color: white;
    }
    .form-container h3 {
        text-align: center;
    }
    .form-container form {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .form-container form input,
    .form-container form textarea {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid white;
    }
    .form-container form button {
        background-color: #007bff;
        color: white;
    }
</style>
<body>
    <div class="container d-flex justify-content-center">
        <div class="form-container">
            <h3>Edit Your Entry Here!!</h3>
            <form action="/listings/edit/<%=info[0]._id%>?_method=patch" method="post">
                <h2><%=info[0]._id%></h2>
                <label for="title">Title</label>
                <input type="text" name="title" value="<%=info[0].title%>">
                <label for="description">Description</label>
                <textarea name="description" type="text" rows="8" cols="25"><%=info[0].description%></textarea>
                <label for="image">Image URL</label>
                <textarea name="image" type="text" rows="2" cols="25"><%=info[0].image%></textarea>
                <label for="price">Price</label>
                <input type="text" name="price" value="<%=info[0].price%>">
                <label for="location">Location</label>
                <input type="text" name="location" value="<%=info[0].location%>">
                <label for="country">Country</label>
                <input type="text" name="country" value="<%=info[0].country%>">
                <button type="submit" class="btn btn-primary">SUBMIT!!</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>